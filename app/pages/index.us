<!DOCTYPE html>
<html>
<head>
  <base href="/"></base>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= pkg.title %></title>
  <link rel="stylesheet" type="text/css" href="/css/app.css" media="all"/>
  <link type="text/plain" rel="author" href="/humans.txt" />
</head>
<body ng-app="app" ng-controller="AppController as app">
<div class="off-canvas-wrap move-right" data-offcanvas="">
  <div class="inner-wrap">
    <!-- Off Canvas Menu -->
    <aside class="left-off-canvas-menu" ng-if="app.ready">

      <!-- TODO: only insert this if the user is logged in. And make it work on mobile -->
      <div class="icon-bar vertical five-up">
        <div class="logo"></div>
        <a class="item" ui-sref="dashboard">
          <i class="fi-home"></i>
          <label>Dashboard</label>
        </a>
        <a class="item" ui-sref="playlist-new-template" ng-if-permission="createPlaylist">
          <i class="fi-home"></i>
          <label>Create a ride</label>
        </a>
        <a class="item" ng-if-permission="viewContent">
          <i class="fi-home"></i>
          <label>My rides</label>
        </a>
        <a class="item" ng-if-permission="viewContent">
          <i class="fi-home"></i>
          <label>Browse rides</label>
        </a>
        <a class="item">
          <i class="fi-home"></i>
          <label>Music</label>
        </a>
        <a class="item" ui-sref="beats-admin" ng-if-permission="viewAdmin">
          <i class="fi-home"></i>
          <label>Beats</label>
        </a>
        <a class="item" ui-sref="gyms-admin" ng-if-permission="viewAdmin">
          <i class="fi-home"></i>
          <label>Clubs</label>
        </a>
        <a class="item" ui-sref="countries-admin" ng-if-permission="viewAdmin">
          <i class="fi-home"></i>
          <label>Countries</label>
        </a>
        <a class="item" ui-sref="devices-admin" ng-if-permission="viewAdmin">
          <i class="fi-home"></i>
          <label>Devices</label>
        </a>
        <a class="item" ui-sref="goals-admin" ng-if-permission="viewAdmin">
          <i class="fi-home"></i>
          <label>Goals</label>
        </a>
        <a class="item" ui-sref="locations-admin" ng-if-permission="viewAdmin">
          <i class="fi-home"></i>
          <label>Locations</label>
        </a>
        <a class="item" ui-sref="music-providers-admin" ng-if-permission="viewAdmin">
          <i class="fi-home"></i>
          <label>Music Providers</label>
        </a>
        <a class="item" ui-sref="playlists" ng-if-permission="viewAdmin">
          <i class="fi-home"></i>
          <label>Playlists</label>
        </a>
        <a class="item" ui-sref="templates-admin" ng-if-permission="viewAdmin">
          <i class="fi-home"></i>
          <label>Templates</label>
        </a>
        <a class="item" ui-sref="users-admin" ng-if-permission="viewUsers">
          <i class="fi-home"></i>
          <label>Users</label>
        </a>
        <a class="item" ui-sref="usertypes-admin" ng-if-permission="viewAdmin">
          <i class="fi-home"></i>
          <label>User types</label>
        </a>
      </div>

    </aside>
    <spinner class="spinner overlay" name="bodySpinner" show="true"></spinner>
    <div ng-messages="app.error">
      <div class="logo fixed"></div>
      <p class="error" ng-message="error">The site is temporarily unavailable. Please try again later.</p>
    </div>
    <div ui-view ng-if="app.ready" class="row header content">
    </div>
  </div>
</div>

<script type="text/javascript" src="/js/app.js"></script>
</body>
</html>
